{
  "name": "@liflig/load-secrets",
  "version": "0.0.0-development",
  "description": "Library for loading project secrets into AWS Secrets Manager",
  "license": "Apache-2.0",
  "type": "module",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/capralifecycle/load-secrets.git"
  },
  "scripts": {
    "prepare": "npm run build && husky",
    "build": "tsc",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "lint:fix-unsafe": "biome check --write --unsafe",
    "fmt": "biome format --write",
    "fmt:check": "biome format",
    "semantic-release": "semantic-release",
    "upgrade-deps": "ncu --upgrade --install always --format group --reject @types/node"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "3.999.0",
    "@aws-sdk/client-sts": "3.999.0",
    "chalk": "5.6.2",
    "read": "5.0.1",
    "typescript": "5.9.3"
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.4",
    "@commitlint/cli": "20.4.2",
    "@commitlint/config-conventional": "20.4.2",
    "@types/node": "24.10.13",
    "husky": "9.1.7",
    "npm-check-updates": "19.6.2",
    "semantic-release": "25.0.3"
  }
}
