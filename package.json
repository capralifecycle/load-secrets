  },
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "3.911.0",
    "@aws-sdk/client-sts": "3.911.0",
    "chalk": "5.6.2",
    "read": "4.1.0",
    "typescript": "5.9.3"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@types/node": "24.7.2",
    "@types/read": "3.0.0",
    "husky": "9.1.7",
    "semantic-release": "24.2.9"
  }
}
